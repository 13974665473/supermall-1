// 1.vscode安装插件：Path Intellisense
// 2.进入settings.json配置文件配置：
// "path-intellisense.mappings": {
//   "@": "${workspaceRoot}/src"
// }
// 3.在项目package.json所在同级目录下创建文件jsconfig.json：
{
  "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./",
      "paths": {
        "@/*": ["src/*"]
      }
  },
  "exclude": [
      "node_modules"
  ]
}